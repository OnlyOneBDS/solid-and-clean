<EditForm Model="@LeaveType" OnValidSubmit="@OnValidSubmit">
  <DataAnnotationsValidator />
  <ValidationSummary />
  <fieldset disabled="@Disabled">
    <div class="form-group">
      <label>Name:</label>
      <div>
        <InputText class="form-control" @bind-Value="@LeaveType.Name" />
        <ValidationMessage For="@(() => LeaveType.Name)" />
      </div>
    </div>
    <div class="form-group">
      <label>Default Days:</label>
      <div>
        <InputNumber class="form-control" @bind-Value="@LeaveType.DefaultDays" />
        <ValidationMessage For="@(() => LeaveType.DefaultDays)" />
      </div>
    </div>
  </fieldset>
  @if (!Disabled)
  {
    <button type="submit" class="btn btn-success btn-block">
      @ButtonText
    </button>
  }
  <BackToList Target="leavetypes" />
</EditForm>